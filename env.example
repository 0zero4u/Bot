# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===========================================
# REQUIRED: Delta Exchange API Configuration
# ===========================================
DELTA_API_KEY=your_delta_api_key_here
DELTA_API_SECRET=your_delta_api_secret_here
DELTA_BASE_URL=https://api.delta.exchange

# ===========================================
# REQUIRED: Trading Configuration
# ===========================================
# Product ID for the instrument you want to trade on Delta Exchange
# Example: 27 for BTCUSD perpetual futures
PRODUCT_ID=27

# Price threshold in USD - trades trigger when price moves by this amount
PRICE_THRESHOLD=40.00

# Order size (number of contracts/units to trade)
ORDER_SIZE=100

# ===========================================
# OPTIONAL: Bybit Configuration
# ===========================================
# Symbol to monitor on Bybit (default: BTCUSDT)
BYBIT_SYMBOL=BTCUSDT

# Bybit WebSocket URL (default: wss://stream.bybit.com/v5/public/spot)
BYBIT_STREAM_URL=wss://stream.bybit.com/v5/public/spot

# Minimum tick size for price filtering (default: 0.1)
MINIMUM_TICK_SIZE=0.1

# ===========================================
# OPTIONAL: System Configuration
# ===========================================
# Internal WebSocket port for communication between components
INTERNAL_WS_PORT=8082

# Reconnection interval in milliseconds (default: 5000)
RECONNECT_INTERVAL=5000

# Log level: error, warn, info, debug (default: info)
LOG_LEVEL=info

# ===========================================
# OPTIONAL: Risk Management
# ===========================================
# Maximum number of trades per hour (default: 10)
MAX_TRADES_PER_HOUR=10

# Maximum loss per day in USD (default: 1000)
MAX_DAILY_LOSS=1000

# Stop trading if account balance falls below this percentage (default: 20)
MIN_BALANCE_PERCENTAGE=20